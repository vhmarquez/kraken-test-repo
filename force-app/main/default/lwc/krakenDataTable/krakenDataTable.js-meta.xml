<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <description>Kraken Data Table LWC</description>
    <isExposed>true</isExposed>
    <masterLabel>Kraken Data Table</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="configId" datasource="apex://KrakenDataTableConfigSelector" type="String" label="Configuration" description="Select a saved configuration for object and fields." />
            <property name="editable" type="Boolean" label="Enable Editing" default="false" description="Allow inline editing for updateable fields." />
            <property name="showActions" type="Boolean" label="Show Actions" default="false" description="Show row actions like View." />
            <property name="pageSize" type="Integer" label="Page Size" default="10" description="Number of records per page." />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>